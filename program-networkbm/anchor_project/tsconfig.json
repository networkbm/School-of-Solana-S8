{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "lib": ["es2015", "dom", "es2017"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["tests/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
